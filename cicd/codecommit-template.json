{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "This template creates the resources required for a sample AWS CodeDeploy in-place deployment.",
    "Parameters": {
        "RepositoryName": {
            "Description": "The name for this repository.",
            "Type": "String",
            "MinLength": 1,
            "MaxLength": 255,
            "AllowedPattern": "^[a-zA-Z][-a-zA-Z0-9]*$",
            "Default": "gmaps",
            "ConstraintDescription": "Sane value for a git repository"
        },
        "RepositoryDescription": {
            "Description": "The description for this repository.",
            "Type": "String",
            "MinLength": 1,
            "MaxLength": 255,
            "AllowedPattern": ".*",
            "Default": "Git repo for gmaps",
            "ConstraintDescription": "Sane value for a git repository description"
        }
    },
    "Resources": {
        "GitRepo": {
            "Type": "AWS::CodeCommit::Repository",
            "Properties": {
                "RepositoryDescription": {
                    "Ref": "RepositoryDescription"
                },
                "RepositoryName": {
                    "Ref": "RepositoryName"
                }
            }
        }
    },
    "Outputs": {
        "GitRepo": {
            "Description": "The git repo.",
            "Value": {
                "Ref": "GitRepo"
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-GitRepo"
                }
            }
        }
    }
}