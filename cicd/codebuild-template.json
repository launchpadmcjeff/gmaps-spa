{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "The CodeBuild stack. It builds teh codez.",
    "Metadata": {
        "AWS::CloudFormation::Interface": {
            "ParameterGroups": [
                {
                    "Label": {
                        "default": "CodeBuild Settings"
                    },
                    "Parameters": [
                        "RoleStackName",
                        "CodeBuildProjectName",
                        "CodeBuildProjectDescription"
                    ]
                },
                {
                    "Label": {
                        "default": "Source and Build Settings"
                    },
                    "Parameters": [
                        "PathFolder",
                        "NameFolder"
                    ]
                }
            ]
        }
    },
    "Parameters": {
        "RoleStackName": {
            "Description": "Name of an active CloudFormation stack that contains the Service Roles.",
            "Type": "String",
            "MinLength": 1,
            "MaxLength": 255,
            "AllowedPattern": "^[a-zA-Z][-a-zA-Z0-9]*$",
            "Default": "gmaps-roles"
        },
        "CodeBuildProjectName": {
            "Description": "The name for this build project. This name must be unique across all of the build projects in your AWS account.",
            "Type": "String",
            "MinLength": 1,
            "MaxLength": 255,
            "AllowedPattern": "^[a-zA-Z][-a-zA-Z0-9]*$",
            "Default": "gmaps-codebuild"
        },
        "CodeBuildProjectDescription": {
            "Description": "The description for this build project.",
            "Type": "String",
            "MinLength": 1,
            "MaxLength": 255,
            "AllowedPattern": ".*",
            "Default": "gmaps-codebuild project description"
        },
        "PathFolder": {
            "Description": "Used for the path folder in the S3 bucket.",
            "Type": "String",
            "MinLength": 1,
            "MaxLength": 255,
            "AllowedPattern": "^[a-zA-Z][-a-zA-Z0-9]*$",
            "Default": "gmaps-project"
        },
        "NameFolder": {
            "Description": "Used for the name folder in the S3 bucket.",
            "Type": "String",
            "MinLength": 1,
            "MaxLength": 255,
            "AllowedPattern": "^[a-zA-Z][-a-zA-Z0-9]*$",
            "Default": "gmaps-deployables"
        }
    },
    "Resources": {
        "CodeBuildArtifactLocation": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "BucketName": {
                    "Fn::Sub": "${AWS::StackName}-bucket-${AWS::Region}"
                },
                "Tags": [
                    {
                        "Key": "Purpose",
                        "Value": "CodeBuildArtifactLocation"
                    }
                ]
            }
        },
        "CodeBuild": {
            "Type": "AWS::CodeBuild::Project",
            "Properties": {
                "Artifacts": {
                    "Location": {
                        "Ref": "CodeBuildArtifactLocation"
                    },
                    "Name": {
                        "Ref": "NameFolder"
                    },
                    "NamespaceType": "NONE",
                    "Packaging": "NONE",
                    "Path": {
                        "Ref": "PathFolder"
                    },
                    "Type": "S3"
                },
                "Description": {
                    "Ref": "CodeBuildProjectDescription"
                },
                "Environment": {
                    "ComputeType": "BUILD_GENERAL1_SMALL",
                    "EnvironmentVariables": [
                        {
                            "Name": "String",
                            "Value": "String"
                        }
                    ],
                    "Image": "aws/codebuild/nodejs:7.0.0",
                    "PrivilegedMode": false,
                    "Type": "LINUX_CONTAINER"
                },
                "Name": {
                    "Ref": "CodeBuildProjectName"
                },
                "ServiceRole": {
                    "Fn::ImportValue": {
                        "Fn::Sub": "${RoleStackName}-CodeBuildRole"
                    }
                },
                "Source": {
                    "BuildSpec": "cicd/buildspec.yml",
                    "Location": "https://git-codecommit.${AWS::Region}.amazonaws.com/v1/repos/gmaps",
                    "Type": "CODECOMMIT"
                },
                "Tags": [
                    {
                        "Key": "Key1",
                        "Value": "Value1"
                    },
                    {
                        "Key": "Key2",
                        "Value": "Value2"
                    }
                ],
                "TimeoutInMinutes": 10
            }
        }
    }
}